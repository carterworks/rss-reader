---
const { class: className, ...props } = Astro.props;
---

<dialog
	class:list={[
		"fixed",
		"inset-4",
		"m-auto",
		"w-full",
		"max-w-[min(90vw,40rem)]",
		"max-h-[80vh]",
		"bg-bg/95",
		"backdrop-blur-sm",
		"rounded-md",
		"border-2",
		"border-ui-3",
		"p-4",
		"overflow-y-auto",
		className,
	]}
	role="dialog"
	aria-modal="true"
	aria-label="Popover"
	popover
	{...props}
>
	<slot />
</dialog>
